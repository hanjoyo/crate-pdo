{
    "name": "hanjoyo/crate-pdo",
    "description": "A PDO adapter for interacting with the Crate.io DBMS",
    "license": "Apache-2.0",
    "homepage": "https://github.com/hanjoyo/crate-pdo.git",
    "keywords": ["database", "pdo", "crate"],
    "repositories": [
    {
        "type": "package",
        "package": {
            "name": "hanjoyo-crate-pdo", //give package name to anything, must be unique
            "version": "1.0",
            "source": {
                "url": "https://github.com/hanjoyo/crate-pdo.git", //git url
                "type": "git",
                "reference": "internal_use" //git branch-name
            }
        }
    }],
    "require": {
        "php":     "^7.2",
        "ext-pdo": "*",
        "guzzlehttp/guzzle": "~6.0"
    },
    "autoload": {
        "psr-0": {
            "Crate\\": "src"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "~7.0",
        "phpstan/phpstan": "^0.9.2",
        "squizlabs/php_codesniffer": "^2.8.1"
    },
    "autoload-dev": {
        "psr-0": {
            "CrateTest\\PDO\\": "test",
            "CrateIntegrationTest\\PDO\\": "test"
        }
    }
}
